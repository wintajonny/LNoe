<Window x:Class="AsyncWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox x:Name="text1" />
            <TextBox x:Name="text2" />
            <Button Content="Add" Click="OnAdd" />
            <Button Content="Start BackgroundWorker" Click="OnBackgroundWorker" />
            <Button Content="AddWithProgress" Click="OnAddWithProgress" />
            <TextBlock x:Name="textResult" />
            <ProgressBar x:Name="progress1" Visibility="Hidden" />
        </StackPanel>

    </Grid>
</Window>
