<Window x:Class="WpfProgressSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProgressSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Rectangle Name="border" Grid.Row="1" Fill="LightBlue" HorizontalAlignment="Center" Width="800" />
        <Rectangle Name="rect" Grid.Row="1" Fill="Green" Width="0" HorizontalAlignment="Left" />
        <Button Grid.Row="2" Width="150" Content="Start" Click="Button_Click"/>
    </Grid>
</Window>
